  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:frontend": "vite",
    "dev:backend": "cd backend && .venv/bin/python3 -m uvicorn app.main:app --reload --port 8000",
    "dev:full": "concurrently \"cd backend && .venv/bin/python3 -m uvicorn app.main:app --reload --port 8000\" \"vite\"",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "lint": "eslint .",
    "preview": "vite preview",
    "docker:mongodb:start": "docker-compose up -d mongodb",
    "docker:mongodb:stop": "docker-compose stop mongodb",
    "docker:mongodb:restart": "docker-compose restart mongodb",
    "docker:mongodb:logs": "docker-compose logs -f mongodb",
    "docker:mongodb:status": "docker-compose ps mongodb",
    "docker:mongodb:shell": "docker exec -it miniapp_mongodb mongosh miniapp",
    "docker:mongodb:backup": "./scripts/docker-mongodb.sh backup",
    "docker:mongo-express": "docker-compose --profile tools up -d mongo-express",
    "docker:redis:start": "docker-compose up -d redis",
    "docker:redis:stop": "docker-compose stop redis",
    "docker:redis:logs": "docker-compose logs -f redis",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:prod:restart": "docker-compose -f docker-compose.prod.yml restart",
    "docker:prod:deploy": "./docker-deploy.sh"
  },
  "dependencies": {
